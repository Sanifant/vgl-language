{
	"name": "samplemanager-tools",
	"displayName": "SampleManager extension",
	"description": "SampleManager support extension",
	"version": "0.0.1",
	"publisher": "stefanpetersen",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Sanifant/vgl-language"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onLanguage:sm-structure",
		"onLanguage:vgl-language"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "sm-structure",
				"aliases": [
					"Structure.txt"
				],
				"filenamePatterns": [
					"structure.txt"
				]
			},
			{
				"id": "vgl-language",
				"aliases": [
					"VGL Report",
					"VGL"
				],
				"filenamePatterns": [
					"*.rpf",
					"*.sxf",
					"*.caf"
				]
			}
		],
		"grammars": [
			{
				"language": "vgl-language",
				"scopeName": "source.vgl-language",
				"path": "./syntaxes/vgl-language.json"
			},
			{
				"language": "sm-structure",
				"scopeName": "source.sm-structure",
				"path": "./syntaxes/sm-structure.json",
				"embeddedLanguages": {
					"markup.raw.sm-structure": "sql"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "sampleManager",
					"title": "SampleManager Toolbox",
					"icon": "media/sm.svg"
				}
			]
		},
		"views": {
			"sampleManager": [
				{
					"id": "reportOutline",
					"name": "Report Outline"
				}
			]
		},
		"configuration": {
			"title": "SampleManager",
			"properties": {
				"sampleManager.Instance.Name": {
					"type": "string",
					"scope": "resource",
					"default": "VGSM",
					"description": "Name of the SampleManager Instance"
				},
				"sampleManager.Instance.Folder": {
					"type": "string",
					"scope": "resource",
					"description": "Folder of the SampleManager Instance"
				},
				"sampleManager.Installation.Folder": {
					"type": "string",
					"scope": "resource",
					"description": "Folder of the SampleManager Base Installation"
				},
				"sampleManager.Installation.Version": {
					"type": "string",
					"scope": "resource",
					"description": "Version of SampleManager being installed"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"vscode:publish-major": "vsce publish major",
		"vscode:publish-minor": "vsce publish minor",
		"vscode:publish-patch": "vsce publish patch",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
