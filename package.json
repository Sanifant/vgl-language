{
	"name": "vgl-language",
	"displayName": "VGL Language",
	"description": "SampleManager support extension",
	"version": "0.0.1",
	"publisher": "stefanpetersen",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:vgl-structure",
		"onLanguage:vgl-report"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "vgl-structure",
				"aliases": [
					"Structure.txt"
				],
				"filenamePatterns": [
					"structure.txt",
					"structure.*.txt",
					"*.structure.txt",
					"structure.txt.*"
				]
			},
			{
				"id": "vgl-report",
				"aliases": [
					"VGL Report"
				],
				"filenamePatterns": [
					"*.rpf",
					"*.sxf",
					"*.caf"
				]
			}
		],
		"views": {
			"explorer": [
				{
					"id": "reportOutline",
					"name": "Report Outline",
					"when": "reportOutlineEnabled"
				}
			]
		},
		"configuration":{
			"title": "vgl language",
			"properties": {
				"vgl.Instance.Name": {
					"type": "string",
					"scope":"window",
					"default": "VGSM",
					"description": "Name of the SampleManager Instance"
				},
				"vgl.Instance.Folder": {
					"type": "string",
					"scope":"window",
					"description": "Folder of the SampleManager Instance"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
